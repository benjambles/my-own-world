{
    "name": "my-own-world",
    "version": "1.0.0",
    "description": "Tools for world builders",
    "main": "index.js",
    "type": "module",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "css": "npm run css --workspaces --if-present",
        "lint": "npm run lint --workspaces --if-present",
        "prepare": "husky",
        "ts": "tsc -b -v",
        "ts:clean": "tsc -b --clean"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "9.22.0",
        "eslint": "9.22.0",
        "globals": "16.0.0",
        "husky": "9.1.7",
        "lint-staged": "15.5.0",
        "prettier": "3.5.3",
        "typescript": "5.8.2",
        "typescript-eslint": "8.26.1"
    }
}
