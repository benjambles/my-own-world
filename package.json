        "koa-helmet": "5.2.0",
        "koa-joi-router": "6.0.2",
        "koa-json-error": "3.1.2",
        "koa-jwt": "4.0.0",
        "koa-morgan": "1.0.1",
        "koa-response-time": "2.1.0",
        "koa-router": "9.4.0",
        "koa-static": "5.0.0",
        "lit-element": "2.4.0",
        "lit-html": "1.3.0",
        "mongodb": "3.6.2",
