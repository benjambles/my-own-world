{
    "name": "my-own-world",
    "version": "1.0.0",
    "description": "Tools for world builders",
    "main": "index.js",
    "browserslist": [
        "> 1% and last 2 versions",
        "not IE 11"
    ],
    "type": "module",
    "scripts": {
        "build": "npm run css && npm run ts",
        "postbuild": "npm run copy",
        "ts": "tsc -b -v",
        "ts:clean": "tsc -b --clean",
        "css": "postcss src/ui/components/**/*.css --base src/ui/components --config src/ui/ --dir dist/ui/static/styles",
        "copy": "npm run copy:env && npm run copy:fonts",
        "copy:env": "copyfiles -u 1 -a src/**/.env dist",
        "copy:fonts": "copyfiles -u 1 src/ui/static/fonts/**/*.woff2 dist",
        "test": "jest",
        "api": "nodemon --config src/api/nodemon.json --inspect=:9230",
        "website": "nodemon --config src/website/nodemon.json --inspect=:9229",
        "storybook": "start-storybook -c src/ui/.storybook -s dist/ui/static",
        "api:generator": "node src/api/lib/generators/index.js"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "dependencies": {
        "@popeindustries/lit-html-server": "3.1.0",
        "bcrypt": "5.0.1",
        "dotenv": "9.0.0",
        "http-errors": "1.8.0",
        "jsonwebtoken": "8.5.1",
        "koa": "2.13.1",
        "koa-better-error-handler": "7.0.1",
        "koa-compress": "5.0.1",
        "koa-conditional-get": "3.0.0",
        "koa-etag": "4.0.0",
        "koa-helmet": "6.1.0",
        "koa-joi-router": "7.0.0",
        "koa-jwt": "4.0.1",
        "koa-pino-logger": "3.0.0",
        "koa-router": "10.0.0",
        "koa-static": "5.0.0",
        "lit-element": "2.5.1",
        "lit-html": "1.4.1",
        "mongodb": "3.6.6",
        "ts-option": "2.1.0",
        "uuid": "8.3.2"
    },
    "devDependencies": {
        "@babel/core": "7.14.0",
        "@shopify/jest-koa-mocks": "2.3.4",
        "@storybook/addon-a11y": "6.3.0-alpha.24",
        "@storybook/addon-essentials": "6.3.0-alpha.24",
        "@storybook/addon-knobs": "6.3.0-alpha.21",
        "@storybook/addon-postcss": "^2.0.0",
        "@storybook/addons": "6.3.0-alpha.24",
        "@storybook/builder-webpack5": "^6.3.0-alpha.24",
        "@storybook/html": "6.3.0-alpha.24",
        "@types/bcrypt": "3.0.1",
        "@types/http-errors": "1.8.0",
        "@types/jest": "26.0.23",
        "@types/jsonwebtoken": "8.5.1",
        "@types/koa": "2.11.6",
        "@types/koa-joi-router": "5.2.5",
        "@types/node": "15.0.2",
        "@types/uuid": "8.3.0",
        "@typescript-eslint/eslint-plugin": "4.22.1",
        "@typescript-eslint/parser": "4.22.1",
        "copyfiles": "2.4.1",
        "css-loader": "5.2.4",
        "cssnano": "5.0.2",
        "eslint": "7.25.0",
        "husky": "4.3.6",
        "jest": "26.6.3",
        "lint-staged": "10.5.3",
        "postcss": "8.2.14",
        "postcss-cli": "8.3.1",
        "postcss-import": "14.0.1",
        "postcss-loader": "4.1.0",
        "postcss-modules": "4.0.0",
        "prettier": "2.2.1",
        "style-loader": "2.0.0",
        "ts-jest": "26.5.6",
        "ts-lit-plugin": "1.2.1",
        "ts-loader": "9.1.2",
        "typescript": "4.2.4"
    }
}
