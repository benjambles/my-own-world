{
    "name": "my-own-world",
    "version": "1.0.0",
    "description": "Tools for world builders",
    "main": "index.js",
    "browserslist": [
        "> 1% and last 2 versions",
        "not IE 11"
    ],
    "scripts": {
        "build": "tsc -b -v && gulp --cwd src/api && gulp --cwd src/website && gulp --cwd src/ui",
        "test": "jest",
        "clean:ts": "tsc -b --clean",
        "watch:ts": "tsc -b -v -w",
        "watch:css": "gulp --cwd src/ui watchCSS",
        "api": "nodemon --config src/api/nodemon.json dist/api/bin/app.js",
        "website": "nodemon --config src/website/nodemon.json dist/website/bin/app.js",
        "storybook": "start-storybook -c src/ui/.storybook -s dist/ui/static",
        "api:generator": "node src/api/lib/generators/index.js"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "dependencies": {
        "@hapi/joi": "17.1.1",
        "@popeindustries/lit-html-server": "3.1.0",
