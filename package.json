{
    "name": "my-own-world",
    "version": "1.0.0",
    "description": "Tools for world builders",
    "main": "index.js",
    "type": "module",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "css": "npm run css --workspaces --if-present",
        "prepare": "husky install",
        "test": "jest",
        "ts": "tsc -b -v",
        "ts:clean": "tsc -b --clean"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "5.42.1",
        "@typescript-eslint/parser": "5.42.1",
        "eslint": "8.27.0",
        "husky": "8.0.2",
        "jest": "29.4.3",
        "lint-staged": "13.0.3",
        "prettier": "2.7.1",
        "ts-jest": "29.0.5",
        "ts-node": "10.9.1",
        "typescript": "4.9.5"
    }
}
