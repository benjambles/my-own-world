{
    "name": "my-own-world",
    "version": "1.0.0",
    "description": "Tools for world builders",
    "main": "index.js",
    "type": "module",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "css": "npm run css --workspaces --if-present",
        "prepare": "husky install",
        "test": "jest",
        "ts": "tsc -b -v",
        "ts:clean": "tsc -b --clean"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "5.60.1",
        "@typescript-eslint/parser": "5.60.1",
        "eslint": "8.43.0",
        "husky": "8.0.3",
        "jest": "29.5.0",
        "lint-staged": "13.2.2",
        "prettier": "2.8.8",
        "ts-jest": "29.1.0",
        "ts-node": "10.9.1",
        "typescript": "5.1.3"
    }
}
