        "test": "jest",
        "ts": "tsc -b -v",
        "ts:clean": "tsc -b --clean"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "7.0.2",
        "@typescript-eslint/parser": "7.0.2",
        "eslint": "8.57.0",
        "husky": "9.0.11",
        "jest": "29.7.0",
        "lint-staged": "15.2.2",
        "prettier": "3.2.5",
        "ts-jest": "29.1.2",
        "ts-node": "10.9.2",
        "typescript": "5.3.3"
    }
}
