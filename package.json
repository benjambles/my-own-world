{
    "name": "my-own-world",
    "version": "1.0.0",
    "description": "Tools for world builders",
    "main": "index.js",
    "browserslist": [
        "> 1% and last 2 versions",
        "not IE 11"
    ],
    "scripts": {
        "build": "npm run css && npm run ts",
        "postbuild": "npm run copy",
        "ts": "tsc -b -v",
        "ts:clean": "tsc -b --clean",
        "css": "postcss src/ui/components/**/*.css --base src/ui/components --config src/ui --dir dist/ui/static/styles",
        "copy": "npm run copy:env && npm run copy:fonts",
        "copy:env": "copyfiles -u 1 -a src/**/.env dist",
        "copy:fonts": "copyfiles -u 1 src/ui/static/fonts/**/*.woff2 dist",
        "test": "jest",
        "api": "nodemon --config src/api/nodemon.json --inspect=:9230",
        "website": "nodemon --config src/website/nodemon.json --inspect=:9229",
        "storybook": "start-storybook -c src/ui/.storybook -s dist/ui/static",
        "api:generator": "node src/api/lib/generators/index.js"
    },
    "_moduleAliases": {
        "@api": "dist/api",
        "@gameLib": "dist/game-lib",
        "@sharedServer": "dist/shared-server",
        "@ui": "dist/ui",
        "@website": "dist/website"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "dependencies": {
        "@popeindustries/lit-html-server": "3.1.0",
        "bcrypt": "5.0.0",
        "dotenv": "8.2.0",
        "http-errors": "1.8.0",
        "jsonwebtoken": "8.5.1",
        "koa": "2.13.0",
        "koa-better-error-handler": "7.0.0",
        "koa-compress": "5.0.1",
        "koa-conditional-get": "3.0.0",
        "koa-etag": "4.0.0",
        "koa-helmet": "6.0.0",
        "koa-joi-router": "7.0.0",
        "koa-jwt": "4.0.0",
        "koa-pino-logger": "3.0.0",
        "koa-router": "10.0.0",
        "koa-static": "5.0.0",
        "lit-element": "2.4.0",
        "lit-html": "1.3.0",
        "module-alias": "^2.2.2",
        "mongodb": "3.6.3",
        "ts-option": "2.1.0",
        "uuid": "8.3.2"
    },
    "devDependencies": {
        "@babel/core": "7.12.10",
        "@shopify/jest-koa-mocks": "2.3.0",
        "@storybook/addon-a11y": "6.1.11",
        "@storybook/addon-essentials": "6.1.11",
        "@storybook/addon-knobs": "6.1.11",
        "@storybook/addons": "6.1.11",
        "@storybook/html": "6.1.11",
        "@types/bcrypt": "3.0.0",
        "@types/http-errors": "1.8.0",
        "@types/jest": "26.0.19",
        "@types/jsonwebtoken": "8.5.0",
        "@types/koa": "2.11.6",
        "@types/koa-joi-router": "5.2.4",
        "@types/node": "14.14.16",
        "@types/uuid": "8.3.0",
        "@typescript-eslint/eslint-plugin": "4.11.0",
        "@typescript-eslint/parser": "4.11.0",
        "copyfiles": "2.4.1",
        "css-loader": "5.0.1",
        "cssnano": "4.1.10",
        "eslint": "7.16.0",
        "husky": "4.3.6",
        "jest": "26.6.3",
        "lint-staged": "10.5.3",
        "postcss": "8.2.1",
        "postcss-cli": "8.3.1",
        "postcss-import": "14.0.0",
        "postcss-loader": "4.1.0",
        "postcss-modules": "4.0.0",
        "prettier": "2.2.1",
        "style-loader": "2.0.0",
        "ts-jest": "26.4.4",
        "ts-lit-plugin": "1.2.1",
        "typescript": "4.1.3"
    }
}
