{
    "name": "my-own-world",
    "version": "1.0.0",
    "description": "Tools for world builders",
    "main": "index.js",
    "type": "module",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "css": "npm run css --workspaces --if-present",
        "lint": "npm run lint --workspaces --if-present",
        "prepare": "husky",
        "test": "jest",
        "ts": "tsc -b -v",
        "ts:clean": "tsc -b --clean"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "9.20.0",
        "eslint": "9.20.1",
        "globals": "15.15.0",
        "husky": "9.1.7",
        "jest": "29.7.0",
        "lint-staged": "15.4.3",
        "prettier": "3.5.1",
        "ts-jest": "29.2.5",
        "ts-node": "10.9.2",
        "typescript": "5.7.3",
        "typescript-eslint": "8.24.1"
    }
}
