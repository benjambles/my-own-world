        "mongodb": "3.6.6"
    },
    "devDependencies": {
        "@shopify/jest-koa-mocks": "5.0.1",
        "@types/jest": "29.2.2",
        "@types/koa": "2.13.5",
        "@types/node": "18.11.9",
        "copyfiles": "2.4.1",
        "jest": "29.3.0",
        "jest-ts-webcompat-resolver": "1.0.0",
        "ts-jest": "29.0.3",
        "typescript": "4.8.4"
