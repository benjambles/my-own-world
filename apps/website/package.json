{
    "name": "@benjambles/mow-web",
    "version": "1.0.0",
    "description": "Tools for world builders",
    "main": "dist/index.js",
    "type": "module",
    "browserslist": [
        "> 1% and last 2 versions",
        "not IE 11"
    ],
    "scripts": {
        "build": "npm run ts",
        "ts": "tsc -b -v",
        "clean:ts": "tsc -b --clean",
        "test": "jest",
        "dev": "nodemon --config nodemon.json --inspect=:9229",
        "lint": "eslint --fix --ext .js,.ts",
        "start": "node --experimental-vm-modules --experimental-json-modules dist/app.js"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "dependencies": {
        "@benjambles/mow-server": "../../packages/shared-server",
        "@benjambles/mow-ui": "../../packages/ui",
        "@benjambles/rise-engine": "../../packages/rise-engine",
        "@lit-labs/ssr": "1.0.0",
        "http-errors": "1.8.0",
        "joi": "17.6.0",
        "koa": "2.13.1"
    },
    "devDependencies": {
        "@shopify/jest-koa-mocks": "3.0.3",
        "@types/http-errors": "1.8.1",
        "@types/jest": "26.0.24",
        "@types/koa": "2.13.4",
        "@types/node": "16.4.13",
        "jest": "27.0.6",
        "jest-ts-webcompat-resolver": "1.0.0",
        "ts-jest": "27.0.4",
        "ts-lit-plugin": "1.2.1",
        "typescript": "4.8.4"
    }
