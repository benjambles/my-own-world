{
    "name": "@benjambles/mow-web",
    "version": "1.0.0",
    "description": "Tools for world builders",
    "main": "dist/index.js",
    "type": "module",
    "browserslist": [
        "> 1% and last 2 versions",
        "not IE 11"
    ],
    "scripts": {
        "build": "npm run css && npm run ts && npm run rollup",
        "css": "postcss src/**/*.css --base src --config src/ --dir dist/static/styles",
        "rollup": "rollup --config",
        "ts": "tsc -b -v",
        "test": "jest",
        "dev": "node dist/app.js --inspect-port=9229",
        "lint": "eslint --fix --ext .js,.ts",
        "start": "node dist/app.js"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "dependencies": {
        "@benjambles/mow-api": "../api",
        "@benjambles/mow-server": "../../packages/shared-server",
        "@benjambles/mow-ui": "../../packages/ui",
        "@lit-labs/context": "0.4.0",
        "@lit-labs/ssr": "3.1.5",
        "@lit-labs/ssr-client": "1.1.3",
        "http-errors": "2.0.0",
        "joi": "17.9.2",
        "js-cookie": "3.0.5",
        "jwt-decode": "3.1.2",
        "koa": "2.14.2",
        "lit": "2.8.0"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "15.2.0",
        "@rollup/plugin-terser": "0.4.3",
        "@shopify/jest-koa-mocks": "5.1.1",
        "@types/http-errors": "2.0.1",
        "@types/jest": "29.5.3",
        "@types/js-cookie": "3.0.3",
        "@types/koa": "2.13.8",
        "@types/node": "20.5.1",
        "cssnano": "6.0.1",
        "jest": "29.6.2",
        "nodemon": "3.0.1",
        "postcss": "8.4.24",
        "postcss-cli": "10.1.0",
        "postcss-import": "15.1.0",
        "postcss-loader": "7.3.3",
        "postcss-modules": "6.0.0",
        "rollup": "3.28.0",
        "rollup-plugin-summary": "2.0.0",
        "ts-jest": "29.1.1",
        "ts-lit-plugin": "1.2.1",
        "typescript": "5.1.6"
    }
}
