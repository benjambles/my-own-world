{
    "name": "@benjambles/mow-web",
    "version": "1.0.0",
    "description": "Tools for world builders",
    "main": "dist/index.js",
    "type": "module",
    "browserslist": [
        "> 1% and last 2 versions",
        "not IE 11"
    ],
    "scripts": {
        "build": "npm run css && npm run ts",
        "css": "postcss src/**/*.css --base src --config src/ --dir dist/static/styles",
        "ts": "tsc -b -v",
        "test": "jest",
        "dev": "nodemon --config nodemon.json --inspect=:9229",
        "lint": "eslint --fix --ext .js,.ts",
        "start": "node --experimental-vm-modules --experimental-import-meta-resolve dist/app.js"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "dependencies": {
        "@benjambles/mow-api": "../api",
        "@benjambles/mow-server": "../../packages/shared-server",
        "@benjambles/mow-ui": "../../packages/ui",
        "@lit-labs/context": "0.3.3",
        "@lit-labs/ssr": "3.1.5",
        "http-errors": "2.0.0",
        "joi": "17.9.2",
        "koa": "2.14.2"
    },
    "devDependencies": {
        "@shopify/jest-koa-mocks": "5.1.1",
        "@types/http-errors": "2.0.1",
        "@types/jest": "29.5.2",
        "@types/koa": "2.13.6",
        "@types/node": "20.3.2",
        "cssnano": "6.0.1",
        "jest": "29.5.0",
        "nodemon": "2.0.22",
        "postcss": "8.4.24",
        "postcss-cli": "10.1.0",
        "postcss-import": "15.1.0",
        "postcss-loader": "7.3.3",
        "postcss-modules": "6.0.0",
        "ts-jest": "29.1.0",
        "ts-lit-plugin": "1.2.1",
        "typescript": "5.1.3"
    }
}
