{
    "extends": "../../tsconfig-base.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "tsBuildInfoFile": "buildcache",
        "rootDir": "src",
        "outDir": "dist",
        "plugins": [
            {
                "name": "ts-lit-plugin",
                "strict": true,
                "rules": {
                    "no-unknown-tag-name": "off",
                    "no-unknown-event": "warning"
                }
            }
        ]
    },
    "references": [
        {
            "path": "../../packages/rise-engine"
        },
        {
            "path": "../../packages/shared-server"
        },
        {
            "path": "../../packages/ui"
        },
        {
            "path": "../api"
        }
    ],
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/__tests__", "./coverage"]
}
