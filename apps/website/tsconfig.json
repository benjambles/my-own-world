{
    "extends": "../../tsconfig-base.json",
    "compilerOptions": {
        "outDir": "dist",
        "plugins": [
            {
                "name": "ts-lit-plugin",
                "rules": {
                    "no-unknown-event": "warning",
                    "no-unknown-tag-name": "off"
                },
                "strict": true
            }
        ],
        "rootDir": "src",
        "tsBuildInfoFile": "buildcache"
    },
    "references": [
        {
            "path": "../api"
        },
        {
            "path": "../../packages/shared-server"
        },
        {
            "path": "../../packages/ui"
        }
    ],
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/__tests__", "./coverage"]
}
