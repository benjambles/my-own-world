{
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "checkJs": true,
        "target": "es6",
        "module": "commonjs",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": ["esnext.array", "dom"],
        "incremental": true,
        "tsBuildInfoFile": "buildcache",
        "plugins": [
            {
                "name": "ts-lit-plugin",
                "strict": true,
                "rules": {
                    "no-unknown-tag-name": "off",
                    "no-unknown-event": "warn"
                }
            }
        ]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["__tests__", "./coverage", "src/**/*.stories.ts"],
    "compileOnSave": true
}
