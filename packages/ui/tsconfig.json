{
    "extends": "../../tsconfig-base.json",
    "exclude": ["src/**/__tests__", "./coverage", "src/**/*.stories.ts"],
    "include": ["src/**/*.ts", "src/**/*.css.json"],
    "compilerOptions": {
        "composite": true,
        "outDir": "dist",
        "plugins": [
            {
                "name": "ts-lit-plugin",
                "rules": {
                    "no-unknown-event": "warning",
                    "no-unknown-tag-name": "off"
                },
                "strict": true
            }
        ],
        "rootDir": "src",
        "tsBuildInfoFile": "buildcache"
    },
    "references": [
        {
            "path": "../rise-engine"
        }
    ]
}
