{
  "name": "@benjambles/mow-ui",
  "version": "1.0.0",
  "description": "Design system for My Own World application",
  "exports": {
    "./core.js": {
      "import": "./dist/templates/index.js",
      "types": "./dist/templates/index.d.ts"
    },
    "./fonts": "./dist/fonts",
    "./fonts/*": "./dist/fonts/*",
    "./templates/*": "./dist/templates/*",
    "./components/*": "./dist/components/*",
    "./contexts/*": "./dist/contexts/*",
    "./styles.js": "./dist/global-css/index.styles.js",
    "./utils/*": "./dist/utils/*"
  },
  "type": "module",
  "browserslist": [
    "> 1% and last 2 versions",
    "not IE 11"
  ],
  "scripts": {
    "build": "npm run ts && npm run copy",
    "ts": "tsc -b -v",
    "copy": "copyfiles -u 1 src/fonts/**/*.woff2 dist",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint"
  },
  "author": "Ben Allen",
  "license": "ISC",
  "dependencies": {
    "@benjambles/js-lib": "../../packages/lib",
    "@benjambles/mow-server": "../../packages/shared-server",
    "@benjambles/rise-engine": "../../packages/rise-engine",
    "@benjambles/skirmish-engine": "../../packages/skirmish-engine",
    "@lit/context": "1.1.6",
    "lit": "3.3.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "10.0.7",
    "@storybook/addon-docs": "10.0.7",
    "@storybook/addon-links": "10.0.7",
    "@storybook/web-components-vite": "10.0.7",
    "copyfiles": "2.4.1",
    "eslint-plugin-storybook": "10.0.7",
    "storybook": "10.0.7",
    "ts-lit-plugin": "2.0.2",
    "ts-loader": "9.5.4",
    "typescript": "5.9.2",
    "vite": "7.1.3"
  },
  "overrides": {
    "eslint-plugin-storybook": {
      "typescript": "$typescript"
    },
    "storybook": "$storybook"
  }
}
