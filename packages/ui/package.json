{
    "name": "@benjambles/mow-ui",
    "version": "1.0.0",
    "description": "Design system for My Own World application",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./styles/base.css": "./dist/static/styles/global-css/base.css",
        "./styles/base.css.js": {
            "import": "./dist/components/global-css/base.css.js",
            "types": "./dist/components/global-css/base.css.d.ts"
        },
        "./core.js": {
            "import": "./dist/components/core/index.js",
            "types": "./dist/components/core/index.d.ts"
        },
        "./lazy-stylesheet.js": {
            "import": "./dist/components/utils/lazy-stylesheet.js",
            "types": "./dist/components/utils/lazy-stylesheet.d.ts"
        },
        "./mock-data.js": {
            "import": "./dist/utils/mock-data.js",
            "types": "./dist/utils/mock-data.d.ts"
        },
        "./static": "./dist/static"
    },
    "type": "module",
    "browserslist": [
        "> 1% and last 2 versions",
        "not IE 11"
    ],
    "scripts": {
        "build": "npm run css && npm run ts && npm run copy",
        "ts": "tsc -b -v",
        "css": "postcss src/components/**/*.css --base src/components --config src/ --dir dist/static/styles",
        "copy": "copyfiles -u 1 src/static/fonts/**/*.woff2 dist",
        "test": "jest",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "lint": "eslint --fix --ext .js,.ts"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "dependencies": {
        "@benjambles/rise-engine": "../../packages/rise-engine",
        "@lit-labs/ssr": "3.0.1",
        "globcat": "3.0.1",
        "lit": "2.6.1"
    },
    "devDependencies": {
        "@babel/core": "7.20.12",
        "@babel/preset-env": "7.20.2",
        "@babel/preset-react": "7.18.6",
        "@babel/preset-typescript": "7.18.6",
        "@storybook/addon-a11y": "7.0.2",
        "@storybook/addon-actions": "7.0.2",
        "@storybook/addon-essentials": "7.0.2",
        "@storybook/addon-links": "7.0.2",
        "@storybook/addon-postcss": "2.0.0",
        "@storybook/addons": "7.0.2",
        "@storybook/web-components-webpack5": "7.0.2",
        "@types/jest": "29.4.0",
        "babel-loader": "9.1.2",
        "copyfiles": "2.4.1",
        "css-loader": "6.7.3",
        "cssnano": "5.1.15",
        "jest": "29.4.3",
        "postcss": "8.4.21",
        "postcss-cli": "10.1.0",
        "postcss-import": "15.1.0",
        "postcss-loader": "7.0.2",
        "postcss-modules": "6.0.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "resolve-typescript-plugin": "2.0.0",
        "storybook": "7.0.2",
        "style-loader": "3.3.1",
        "ts-jest": "29.0.5",
        "ts-lit-plugin": "1.2.1",
        "ts-loader": "9.4.2",
        "typescript": "4.9.5"
    }
}
