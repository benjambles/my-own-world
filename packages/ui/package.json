{
    "name": "@benjambles/mow-ui",
    "version": "1.0.0",
    "description": "Design system for My Own World application",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./styles/base.css": "./dist/client/styles/global-css/base.css",
        "./styles/base.css.js": {
            "import": "./dist/components/global-css/base.css.js",
            "types": "./dist/components/global-css/base.css.d.ts"
        },
        "./core.js": {
            "import": "./dist/components/core/index.js",
            "types": "./dist/components/core/index.d.ts"
        },
        "./utils.js": {
            "import": "./dist/utils/index.js",
            "types": "./dist/utils/index.d.ts"
        },
        "./mock-data.js": {
            "import": "./dist/utils/mock-data.js",
            "types": "./dist/utils/mock-data.d.ts"
        },
        "./components": "./dist/components",
        "./components/*": "./dist/components/*"
    },
    "type": "module",
    "browserslist": [
        "> 1% and last 2 versions",
        "not IE 11"
    ],
    "scripts": {
        "build": "npm run css && npm run ts && npm run copy",
        "ts": "tsc -b -v",
        "css": "postcss src/components/**/*.css --base src/components --config src/ --dir dist/client/styles",
        "copy": "copyfiles -u 1 src/client/fonts/**/*.woff2 dist",
        "test": "jest",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "lint": "eslint --fix --ext .js,.ts"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "dependencies": {
        "@benjambles/rise-engine": "../../packages/rise-engine",
        "lit": "2.8.0"
    },
    "devDependencies": {
        "@babel/core": "7.22.10",
        "@babel/plugin-proposal-class-properties": "7.18.6",
        "@babel/plugin-proposal-decorators": "7.22.10",
        "@babel/preset-env": "7.22.10",
        "@babel/preset-react": "7.22.5",
        "@babel/preset-typescript": "7.22.5",
        "@storybook/addon-a11y": "7.3.2",
        "@storybook/addon-actions": "7.3.2",
        "@storybook/addon-essentials": "7.3.2",
        "@storybook/addon-links": "7.3.2",
        "@storybook/addon-postcss": "2.0.0",
        "@storybook/addons": "7.3.2",
        "@storybook/web-components-webpack5": "7.3.2",
        "@types/jest": "29.5.3",
        "babel-loader": "9.1.3",
        "copyfiles": "2.4.1",
        "css-loader": "6.8.1",
        "cssnano": "6.0.1",
        "jest": "29.6.2",
        "postcss": "8.4.28",
        "postcss-cli": "10.1.0",
        "postcss-import": "15.1.0",
        "postcss-loader": "7.3.3",
        "postcss-modules": "6.0.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "resolve-typescript-plugin": "2.0.1",
        "storybook": "7.3.2",
        "style-loader": "3.3.3",
        "ts-jest": "29.1.1",
        "ts-lit-plugin": "1.2.1",
        "ts-loader": "9.4.4",
        "typescript": "5.1.6"
    }
}
