{
    "name": "@benjambles/mow-ui",
    "version": "1.0.0",
    "description": "Design system for My Own World application",
    "exports": {
        "./core.js": {
            "import": "./dist/templates/index.js",
            "types": "./dist/templates/index.d.ts"
        },
        "./fonts": "./dist/fonts",
        "./fonts/*": "./dist/fonts/*",
        "./templates/*": "./dist/templates/*",
        "./components/*": "./dist/components/*",
        "./contexts/*": "./dist/contexts/*",
        "./styles.js": "./dist/global-css/index.styles.js",
        "./utils/*": "./dist/utils/*"
    },
    "type": "module",
    "browserslist": [
        "> 1% and last 2 versions",
        "not IE 11"
    ],
    "scripts": {
        "build": "npm run ts && npm run copy",
        "ts": "tsc -b -v",
        "copy": "copyfiles -u 1 src/fonts/**/*.woff2 dist",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "lint": "eslint"
    },
    "author": "Ben Allen",
    "license": "ISC",
    "dependencies": {
        "@benjambles/js-lib": "../../packages/lib",
        "@benjambles/mow-server": "../../packages/shared-server",
        "@benjambles/rise-engine": "../../packages/rise-engine",
        "@benjambles/skirmish-engine": "../../packages/skirmish-engine",
        "@lit/context": "1.1.4",
        "lit": "3.2.1"
    },
    "devDependencies": {
        "@storybook/addon-a11y": "^9.0.0-beta.1",
        "@storybook/addon-docs": "^9.0.0-beta.1",
        "@storybook/addon-links": "^9.0.0-beta.1",
        "@storybook/web-components-vite": "^9.0.0-beta.1",
        "copyfiles": "2.4.1",
        "eslint-plugin-storybook": "^9.0.0-beta.1",
        "storybook": "^9.0.0-beta.1",
        "ts-lit-plugin": "2.0.2",
        "ts-loader": "9.5.2",
        "typescript": "5.8.2",
        "vite": "6.3.2"
    },
    "overrides": {
        "eslint-plugin-storybook": {
            "typescript": "$typescript"
        },
        "storybook": "$storybook"
    }
}
