{
    "compilerOptions": {
        "outDir": "../../dist/website",
        "allowJs": true,
        "checkJs": true,
        "target": "es6",
        "module": "commonjs",
        "removeComments": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": ["esnext.array", "dom"],
        "incremental": true,
        "tsBuildInfoFile": "../../buildcache/website"
    },
    "include": ["**/*.ts"],
    "exclude": ["**/*.test.ts", "./coverage", "**/*.stories.ts"],
    "compileOnSave": true
}
