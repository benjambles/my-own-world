{
    "compilerOptions": {
        "outDir": "../../built/api",
        "allowJs": true,
        "checkJs": true,
        "target": "es2017",
        "module": "commonjs",
        "removeComments": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": ["es2019", "esnext.array", "dom"],
        "incremental": true,
        "tsBuildInfoFile": "../../buildcache/api"
    },
    "include": ["**/*.ts"],
    "exclude": ["**/*.test.ts", "./coverage"],
    "compileOnSave": true
}
