{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "lib": ["ES2022", "esnext.array", "dom", "ES2020.String", "ES2020.Intl"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noErrorTruncation": true,
        "pretty": true,
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es2022",
        "useDefineForClassFields": false
    }
}
