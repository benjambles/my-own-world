{
    "compilerOptions": {
        "skipLibCheck": true,
        "outDir": "./dist",
        "pretty": true,
        "declaration": true,
        "declarationMap": true,
        "allowJs": true,
        "checkJs": true,
        "target": "es2020",
        "module": "esnext",
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "rootDir": "./src",
        "moduleResolution": "node",
        "incremental": true,
        "lib": ["es2019", "esnext.array", "dom", "ES2020.String"],
    },
    "compileOnSave": true
}
