{
    "compilerOptions": {
        "skipLibCheck": true,
        "pretty": true,
        "declaration": true,
        "declarationMap": true,
        "allowJs": true,
        "checkJs": true,
        "target": "es2020",
        "module": "esnext",
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "nodenext",
        "incremental": true,
        "lib": ["ES2022", "esnext.array", "dom", "ES2020.String"]
    },
    "compileOnSave": true
}
