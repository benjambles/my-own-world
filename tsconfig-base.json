{
    "compilerOptions": {
        "skipLibCheck": true,
        "outDir": "./dist",
        "pretty": true,
        "declaration": true,
        "declarationMap": true,
        "allowJs": true,
        "checkJs": true,
        "target": "es2017",
        "module": "commonjs",
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "incremental": true,
        "lib": ["es2019", "esnext.array", "dom"],
        "paths": {
            "@api/*": ["./src/api/*"],
            "@gameLib/*": ["./src/game-lib/*"],
            "@sharedServer/*": ["./src/shared-server/*"],
            "@ui/*": ["./src/ui/*"],
            "@website/*": ["./src/website/*"]
        },
    },
    "compileOnSave": true
}
