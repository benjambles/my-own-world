{
    "compilerOptions": {
        "outDir": "./dist",
        "pretty": true,
        "declaration": true,
        "declarationMap": true,
        "allowJs": true,
        "checkJs": true,
        "target": "es2017",
        "module": "commonjs",
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "incremental": true,
        "lib": ["es2019", "esnext.array", "dom"]
    },
    "compileOnSave": true
}
