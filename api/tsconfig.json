{
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "checkJs": true,
        "target": "es2017",
        "module": "commonjs",
        "removeComments": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": ["es2019", "esnext.array", "dom"],
        "incremental": true,
        "tsBuildInfoFile": "buildcache"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.test.ts", "./coverage"],
    "compileOnSave": true
}
